{
  "manifest_version": 3,
  "name": "Promonoro",
  "description": "Promodoro Extension for Chrome",
  "version": "1.0",
  "icons": {
    "16": "src/images/icon-16.png",
    "32": "src/images/icon-32.png",
    "48": "src/images/icon-48.png",
    "128": "src/images/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Click to use Promonoro",
    "default_icons": {
      "16": "src/images/icon-16.png",
      "32": "src/images/icon-32.png",
      "48": "src/images/icon-48.png",
      "128": "src/images/icon-128.png"
    }
  },
  "permissions": ["storage"]
}
